{
  "name": "jira-supabase-sync",
  "version": "1.0.0",
  "description": "Servicio de sincronización Jira → Supabase cada 30 minutos",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "sync": "node src/run-sync-once.js",
    "sync:integration": "node src/run-sync-integration-only.js",
    "sync:full-daily": "node src/run-full-sync-daily.js",
    "daily-full-sync": "node src/daily-full-sync-service.js",
    "dev": "node --watch src/index.js",
    "test": "node --test",
    "list-projects": "node scripts/list-jira-projects.js",
    "verify-config": "node scripts/verify-config.js",
    "generate-env-config": "node scripts/generate-env-config.js",
    "force-sync-issues": "node scripts/force-sync-specific-issues.js",
    "force-sync-squad-sprint": "node scripts/force-sync-squad-sprint.js",
    "verify-squad-sprint": "node scripts/verify-squad-sprint-data.js",
    "force-full-sync": "node scripts/force-full-sync.js",
    "test-jira": "node scripts/test-jira-query.js",
    "test-access": "node scripts/test-jira-access.js",
    "apply-migrations": "node scripts/apply-migrations.js",
    "verify-schema": "node scripts/verify-schema.js",
    "verify-post-deploy": "node scripts/verify-post-deploy.js",
    "validate-retry": "node scripts/validar-retry-sync.js",
    "validate-integrity": "node scripts/validar-integridad-supabase.js"
  },
  "keywords": [
    "jira",
    "supabase",
    "sync",
    "cron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

